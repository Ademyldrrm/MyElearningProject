@model List<MyElearningProject.DAL.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <br />
                <table class="table table-bordered">
                    <tr>
                        
                        <th>Ad Soyad</th>
                        <th>Mail</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Sil</th>
                       
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>

                            
                            <td>@item.NameSurname</td>
                            <td>@item.Mail</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td> 
                            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>


                        </tr>
                    }

                </table>
     
            </div>
        </div>
    </div>
</div>
