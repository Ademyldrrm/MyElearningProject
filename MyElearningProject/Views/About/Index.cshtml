@model List<MyElearningProject.DAL.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
               Hakkımızda
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Giriş Yazı</th>
                        <th>Açıklmaa</th>
                        <th>Resim</th>
                        <th>İçerik</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.AboutID</td>
                            <td>@item.Title</td>
                            <td>@item.Introduction</td>
                            <td>@item.Description</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.Content</td>
                            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
                            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>


                        </tr>
                    }

                </table>
                <a href="/About/AddAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
            </div>
        </div>
    </div>
</div>

