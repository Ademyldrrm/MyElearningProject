@model MyElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateTestimonial</h2>

<form method="post">

    <label>Referans ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <label>Referans Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <label>Referans Başlı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Referans Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Referans Yorum</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <label>Referans Durum</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-outline-success">Referans  Güncelle</button>
</form>