@model List<MyElearningProject.DAL.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
             Kategori Listesi
                <br />
                <table class="table table-bordered" >
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Siil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                         <tr>
                    
                                 <td>@item.CategoryID</td>
                                 <td>@item.CategoryName</td>
                                 <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                                 <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                             gsdv

                         </tr>
                    }

                </table>
                <a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>