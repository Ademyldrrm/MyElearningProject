@model  MyElearningProject.DAL.Entities.Student
@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öğrenci Güncelleme Sayfası</h2>

<form method="post">

    <label>Öğrenci ID</label>
    @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
    <label>Öğrenci Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <label>Öğrenci Soyadı</label>
    @Html.TextBoxFor(x=>x.Surname,new {@class ="form-control"})
    <br />
    <br />
    <button class="btn btn-outline-success">Öğrenci  Güncelle</button>
</form>

